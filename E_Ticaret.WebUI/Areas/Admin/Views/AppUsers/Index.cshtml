@model IEnumerable<AppUser>

@{
	ViewData["Title"] = "Kullanıcı Listesi";
}


<p>
	<a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Yeni Ekle</a> <!--class ekledik -->
	<!--fontawesome sitesinden plus iconunu aldık.-->
</p>
<table class="table table-hover table-striped">
	<!--tablomuza table-hover ve table-striped özelliği ekledik.-->
			<thead> <!-- telefon-password-username sildik-->
			<tr>
				<th>
				@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
				@Html.DisplayNameFor(model => model.SurName)
				</th>
				<th>
				@Html.DisplayNameFor(model => model.Email)
				</th>
				<th>
				@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
				@Html.DisplayNameFor(model => model.IsAdmin)
				</th>
				<th>
				@Html.DisplayNameFor(model => model.CreateDate)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{ // telefon-password-username sildik
				<tr>
					<td>
					@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.SurName)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.IsAdmin)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.CreateDate)
					</td>
					<td>
								<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i>Düzenle</a> | <!--düzenle butonuna class verdik-->
									<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass-plus"></i>Detay</a> |
									<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i>Sil</a>
					</td>
				</tr>
		}
		</tbody>
	</table>
