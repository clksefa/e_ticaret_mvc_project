@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slider";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Yeni Ekle</a> <!--class ekledik -->
    <!--fontawesome sitesinden plus iconunu aldık.-->
</p>
<table class ="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <!--Description'u sildik-->
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <!--Description'u sildik-->
            <td>
                    <a href="/Img/Slider/@item.Image"><img src="/Img/Slider/@item.Image" height="50" /></a>
                    
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i>Düzenle</a> | <!--düzenle butonuna class verdik-->
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass-plus"></i>Detay</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i>Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
