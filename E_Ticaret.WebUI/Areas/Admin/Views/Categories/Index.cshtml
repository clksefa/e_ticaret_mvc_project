@model IEnumerable<Category>

@{
	ViewData["Title"] = "Kategoriler";
}


<p>
	<a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Yeni Ekle</a> <!--class ekledik -->
	<!--fontawesome sitesinden plus iconunu aldık.-->
</p>
<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreateDate) <!--Description bölümünü CreateDate ile değiştirdik-->
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsActive)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsTopMenu)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ParentID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderNo)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@item.CreateDate.ToShortDateString() <!--Description bölümünü CreateDate ile değiştirdik-->
				</td>
				<td>
					<img src="/Img/Categories/@item.Image" alt="" height="50"/>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsActive)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsTopMenu)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ParentID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderNo)
				</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i>Düzenle</a> | <!--düzenle butonuna class verdik-->
					<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass-plus"></i>Detay</a> |
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i>Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
