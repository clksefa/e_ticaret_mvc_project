@model IEnumerable<News>
@{
	ViewData["Title"] = "Duyuru ve Kampanyalar";
}
<div class="my-5">
    <!--Üst taraftan boşluk vermek için my-5 kullandık-->
    <h1 class="text-center">Kampanyalarımız</h1>
    <div class="row row gx-4 gx-lg-5 row-cols-2 justify-content-center">
        @foreach (var item in Model)
        {
            <partial name="_NewsView" model="item" />
        }
    </div>
</div>