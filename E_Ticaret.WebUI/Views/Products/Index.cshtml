@model IEnumerable<Product>
@{
	ViewData["Title"] = "Ürünlerimiz";
}
<div class="my-5">
    <!--Üst taraftan boşluk vermek için my-5 kullandık-->
    <h1 class="text-center">Ürünlerimiz</h1>
    <div class="row row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model)
        {
            <partial name="_ProductView" model="item" />
        }
    </div>
</div>