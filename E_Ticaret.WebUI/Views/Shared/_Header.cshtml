@using E_Ticaret.WebUI.ExtensionMethods

<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container-fluid"> <!--içerikler arasında boşluk bırakıyor-->
			<!--<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E_Ticaret.WebUI</a>-->
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex">

				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
					</li>
					@await Component.InvokeAsync("Categories")
					
				</ul>



			</div>
			<form action="/Products" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
				<input name="arama" type="search" class="form-control" placeholder="Ürün Ara..." aria-label="Search">
			</form> <!-- ARAMA BUTONU-->
			@if (Context.User.Identity.IsAuthenticated) // Kullanıcının oturum açıp açmamasıyla ilgili
			{
				<div class="dropdown me-5">
					<a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						Hesabım
					</a>

					<ul class="dropdown-menu">
						<li><a class="dropdown-item" href="/Account">Kullanıcı Bilgilerim</a></li>
						<li><a class="dropdown-item" href="/Account/">Siparişlerim</a></li>
						<li><a class="dropdown-item" href="/Account/">Değerlendirmelerim</a></li>
						<li><a class="dropdown-item" href="/Account/SignOut">Oturumu Kapat</a></li>

					</ul>
				</div>
			}
			else
			{
				<div class="dropdown ">
					<a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						Giriş Yap
					</a>

					<ul class="dropdown-menu">
						<li><a class="dropdown-item" href="/Account/SignIn">Giriş Yap</a></li>
						<li><a class="dropdown-item" href="/Account/SignUp">Üye Ol</a></li>

					</ul>
				</div>
			}
			<div class="dropdown ">
				<a class="nav-link text-dark" href="/Favorites">
					Favorilerim
				</a>
			</div>
			<div class="dropdown ">
				@{
					var cart = Context.Session.GetJson<E_Ticaret.Service.Concrete.CartService>("Cart");
					if (cart != null && cart.CartLines.Count > 0)
					{
						<a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Sepetim
							<span class="badge bg-danger" text-white ms-1>@cart.CartLines.Count</span>
						</a>

						<ul class="dropdown-menu">
							@foreach (var item in cart.CartLines)
							{
								<li><a class="dropdown-item text-wrap" href="/Product/Details/@item.Product.Id">
								<img src="/Img/Products/@item.Product.Image"
								alt=""
								height="40"/>
								@item.Product.Name
								</a></li>
							}
							<li class="text-center"><a class="btn btn-warning m-auto" href="/Cart">Sepete Git</a></li>
							


						</ul>
					}
					else
					{
						<a class="nav-link text-dark" href="/Cart">
							Sepetim
						</a>
					}
				}

			</div>
			<a class="nav-link text-dark" asp-controller="Home" asp-action="ContactUs">İletişim</a>
		</div>

	</nav>
</header>